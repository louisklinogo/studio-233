{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"extends": [
		"./packages/config/biome.json"
	],
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"style": {
				"useImportType": "off"
			},
			"complexity": {
				"noUselessUndefinedInitialization": "off",
				"noImportantStyles": "off"
			},
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	}
}
