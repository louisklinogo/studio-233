{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "format:check": {
            "dependsOn": [
                "^format:check"
            ]
        },
        "format:write": {
            "dependsOn": [
                "^format:write"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "db:push": {
            "cache": false,
            "persistent": true
        },
        "db:studio": {
            "cache": false,
            "persistent": true
        },
        "db:migrate": {
            "cache": false,
            "persistent": true
        },
        "db:generate": {
            "cache": false,
            "persistent": true
        }
    }
}